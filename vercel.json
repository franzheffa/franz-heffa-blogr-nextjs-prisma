{
  "version": 3,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://agent-smith-heffa-112329442315.us-central1.run.app/$1" },
    { "source": "/health",  "destination": "https://agent-smith-heffa-112329442315.us-central1.run.app/health" },
    { "source": "/",        "destination": "/index.html" }
  ],
  "headers": [
    { "source": "/(.*)", "headers": [{ "key": "Cache-Control", "value": "no-store" }] }
  ],
  "env": {
    "API_BASE": "https://agent-smith-heffa-112329442315.us-central1.run.app",
    "NEXT_PUBLIC_API_BASE_URL": "https://agent-smith-heffa-112329442315.us-central1.run.app"
  },
  "crons": [{ "path": "/health", "schedule": "0 0 * * *" }]
}
