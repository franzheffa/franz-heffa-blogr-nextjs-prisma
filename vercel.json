{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": null,
  "functions": {
    "api/**/*.py": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/", "destination": "/api/index.py" },
    { "source": "/health", "destination": "/api/index.py" }
  ],
  "crons": [
    { "path": "/health", "schedule": "0 0 * * *" }
  ]
}
