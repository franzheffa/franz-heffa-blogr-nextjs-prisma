{
  "version": 2,
  "env": {
    "NEXT_PUBLIC_API_BASE_URL": "https://agent-smith-heffa-112329442315.us-central1.run.app"
  },
  "functions": { "api/*.cjs": { "runtime": "nodejs20" } },
  "routes": [
    { "src": "/(.*)", "headers": { "Cache-Control": "no-store" }, "continue": true },

    { "handle": "filesystem" },

    { "src": "/api/agent", "dest": "/api/agent.cjs" },
    { "src": "/api/(.*)",  "dest": "https://agent-smith-heffa-112329442315.us-central1.run.app/api/" },

    { "src": "/health",    "dest": "https://agent-smith-heffa-112329442315.us-central1.run.app/health" },
    { "src": "/",          "dest": "/index.html" }
  ],
  "crons": [
    { "path": "/health", "schedule": "*/10 * * * *" }
  ]
}
