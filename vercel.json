{
  "version": 3,
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.11",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "^/health$", "dest": "/api/index.py" },
    { "src": "/(.*)", "dest": "/api/index.py" }
  ],
  "crons": [
    { "path": "/health", "schedule": "0 0 * * *" }
  ]
}
