{
  "version": 2,
  "env": {
    "BACKEND": "https://agent-smith-heffa-112329442315.us-central1.run.app"
  },
  "functions": { "api/**/*.js": { "runtime": "nodejs22.x" } },

  "routes": [
    { "src": "/(.*)", "headers": { "Cache-Control": "no-store" } },

    { "src": "/health", "dest": "https://agent-smith-heffa-112329442315.us-central1.run.app/health" },

    { "handle": "filesystem" },

    { "src": "/.*", "dest": "/index.html" }
  ],

  "crons": [
    { "path": "/api/cron", "schedule": "*/10 * * * *" }
  ]
}
